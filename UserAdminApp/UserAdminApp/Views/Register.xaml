<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserAdminApp.Views.RegisterPage"
             Title="Register">
    <StackLayout Padding="30">
        <Label Text="Register" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Picker x:Name="RolePicker" Title="Select Role">
            <Picker.Items>
                <x:String>User</x:String>
                <x:String>Admin</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Register" Clicked="OnRegisterButtonClicked" />
    </StackLayout>
</ContentPage>
