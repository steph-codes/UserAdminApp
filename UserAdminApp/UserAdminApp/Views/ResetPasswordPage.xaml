<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserAdminApp.Views.ResetPasswordPage"
             Title="Reset Password">
    <StackLayout Padding="30">
        <Label Text="Reset Password" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="NewPasswordEntry" Placeholder="New Password" IsPassword="True" />

        <Button Text="Reset Password" Clicked="OnResetPasswordButtonClicked" />
    </StackLayout>
</ContentPage>
